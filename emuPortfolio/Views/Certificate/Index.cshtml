@using emuPortfolio.Models.Entity
@model List<TblCertificate>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                            
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            
                                <div class="tab-pane" id="timeline">
                                    <!-- The timeline -->
                                    <div class="timeline timeline-inverse">
                                        <!-- timeline time label -->
                                        @foreach (var x in Model)
                                        {
                                        <div class="time-label">
                                            <a href="/Certificate/GetCertificate/@x.CertificateID" class="btn btn-secondary">
                                                <span>
                                                    @x.Date
                                                </span>
                                            </a>
                                        </div>
                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->
                                        <div>
                                            @*<i class="fas fa-envelope bg-primary"></i>*@
                                            <div class="timeline-item">
                                                
                                                <div class="timeline-body">
                                                    @x.Description
                                                </div>
                                                @*<div class="timeline-footer">
                                                    <a href="#" class="btn btn-primary btn-sm">Update</a>
                                                    <a href="#" class="btn btn-danger btn-sm">Delete</a>
                                                </div>*@
                                            </div>
                                        </div>
                                        }
                                    </div>
                                    <a href="/Certificate/AddNewCertificate" class="btn btn-dark">Add New Certf.</a>
                                </div>
                            </div>
                        </div><!-- /.card-body -->
                    </div>
                </div>
            </div>
    </section>
</body>
</html>

