@using emuPortfolio.Models.Entity
@model List<TblEducation>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Education List</h2>



<br />

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Subtitle</th>
        <th>Subtitle</th>
        <th>GNO</th>
        <th>Date</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.EducationID</td>
            <td>@x.Title</td>
            <td>@x.Subtitle1</td>
            <td>@x.Subtitle2</td>
            <td>@x.GANO</td>
            <td>@x.Date</td>
            <td><a href="/Education/DeleteEducation/@x.EducationID" class="btn btn-danger">Delete</a></td> @*Burada id yi bulup contollerde sildik*@
            <td><a href="/Education/UpdateEducation/@x.EducationID" class="btn btn-success">Update</a></td>

        </tr>

    }
</table>
<br />
<a href="/Education/AddNewEducation" class="btn btn-primary">Add New Education</a>